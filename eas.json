{
  "cli": {
    "version": ">= 12.5.4",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "channel": "development",
      "distribution": "internal",
      "ios": {
        "simulator": true
      },
      "android": {
        "distribution": "internal",
        "autoIncrement": "versionCode",
        "buildType": "apk"
      }
    },
    "preview": {
      "android": {
        "distribution": "internal"
      },
      "ios": {
        "simulator": true
      }
    },
    "production": {
      "distribution": "store",
      "autoIncrement": true,
      "android": {
        "autoIncrement": "versionCode"
      },
      "ios": {
        "image": "latest",
        "autoIncrement": "buildNumber"
      },
      "channel": "production"
    }
  }
}
